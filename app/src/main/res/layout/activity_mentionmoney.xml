<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch.Vertical"
    android:background="@color/black"
    tools:context=".Activity.MentionmoneyActivity">

    <include layout="@layout/public_title" />

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_marginTop="@dimen/icon_width_height_10"
        android:background="@color/black_01">

        <LinearLayout
            style="@style/MatchWrap.Vertical"
            android:layout_marginStart="@dimen/start_or_end_15"
            android:layout_marginTop="20dp"
            >

            <TextView
                style="@style/WrapWrap"
                android:layout_marginBottom="@dimen/icon_width_height_10"
                android:text="@string/The_wallet_address"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:textSize="@dimen/text_size_14"
                android:id="@+id/et_password"
                style="@style/MatchWrap.et_1"
                android:hint="@string/Please_enter_your_wallet_address"
                android:layout_marginBottom="@dimen/start_or_end_10"
                />


        </LinearLayout>

        <include layout="@layout/public_line" />

        <TextView
            android:id="@+id/tv_Withdrawal_amount"
            style="@style/WrapWrap"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/Withdrawal_amount"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />

        <RelativeLayout
            style="@style/MatchWrap.Horizontal"
            android:layout_marginStart="@dimen/start_or_end_15"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="@dimen/icon_width_height_10">


            <EditText
                android:textSize="@dimen/text_size_14"
                android:layout_toLeftOf="@+id/tv_get_cot"
                android:id="@+id/et_code"
                style="@style/MatchWrap.et_1"
                android:inputType="number"

             />

            <TextView
                android:id="@+id/tv_get_cot"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/all"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:textSize="@dimen/text_size_11"
        android:id="@+id/tv_data"
        style="@style/WrapWrap"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/icon_width_height_10"
        android:text="@string/service_charge"
        android:textColor="@color/orange" />


    <include layout="@layout/public_button1"></include>
</LinearLayout>