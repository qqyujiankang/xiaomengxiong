<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_01">

    <LinearLayout
        android:id="@+id/ll_a"
        style="@style/MatchWrap.Vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@drawable/bg_radius5_white_top">

        <TextView
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/icon_width_height_10"
            android:layout_marginBottom="@dimen/start_or_end_10"
            android:gravity="center"
            android:text="提示"
            android:textSize="@dimen/text_size_18" />



        <TextView
            android:text="确定要删除密码？"
            android:id="@+id/tv_cone"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/start_or_end_10"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            />

        <LinearLayout style="@style/MatchWrap.Horizontal">

            <Button
                android:id="@+id/public_button1"
                style="@style/AutoWrap"

                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="@dimen/icon_width_height_20"
                android:text="取消"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/public_button"
                style="@style/AutoWrap"

                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="@dimen/icon_width_height_20"
                android:text="@string/confirm"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>