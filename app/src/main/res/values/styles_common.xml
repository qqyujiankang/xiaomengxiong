<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--一下内容格式是   先宽度****后高度-->

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 先宽度****后高度   的匹配-->
    <style name="WrapMatch" parent="TextColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWrap" parent="TextColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap" parent="TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch" parent="TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- 先宽度****后高度   的比重-->

    <style name="AutoWrap" parent="TextColor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapAuto" parent="TextColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <!-- 先宽度****后高度   的  水平或垂直  -->

    <style name="WrapWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>


    <!-- 先宽度****后高度   的比重  的  水平或垂直-->


    <style name="AutoWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AutoWrap.horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>


    <!-- 自定义控件风格-->
    <style name="Custom" />

    <style name="Custom.TabRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_text_color_selector</item>
    </style>


    <style name="GreyStrokeBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#444444</item>
        <item name="android:background">@color/p_white</item>
        <item name="android:layout_height">44dip</item>
    </style>


    <style name="AutoWrapbuttn">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_radius5_blue</item>
    </style>
    <!--    返回键

    -->
    <style name="WrapWrap.ImageView_bank">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/icon_width_height_20</item>
        <item name="android:layout_marginRight">@dimen/icon_width_height_20</item>
        <item name="android:src">@mipmap/bank</item>
    </style>
    <!--Dialog 底部弹出的动画设置设置-->
    <style name="DialogBottomAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--Dialog 底部弹出的设置-->
    <style name="DialogBottomStyle" parent="@android:style/Theme.Dialog">
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/p_transparency</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <!-- 设置屏幕变暗 -->
        <!-- <item name="android:backgroundDimEnabled">true</item> -->
    </style>
    android:layout_marginTop="@dimen/start_or_end_5"
    android:background="@null"
    android:hint="@string/enter_your_PIN"
    android:inputType="textPassword"
    android:singleLine="true"
    android:textColor="@color/white"
    android:textColorHint="@color/bottom_test"
    android:textSize="@dimen/text_size_14"

    <style name="MatchWrap.et_1">
        <item name="android:layout_marginTop">@dimen/start_or_end_5</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/bottom_test</item>
        <item name="android:textSize">@dimen/text_size_14</item>

    </style>
    <style name="MatchWrap.et_1.inputType">
        <item name="android:inputType">textPassword</item>
    </style>

</resources>