<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black_01"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/ll_a"
        style="@style/MatchWrap.Vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_gray1"
        android:visibility="gone">

        <TextView
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/icon_width_height_10"
            android:gravity="center"
            android:text="今日预约比例"
            android:textColor="@color/p_white_test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textColor="@color/p_white_test" />

        <TextView
            android:id="@+id/tv_cone"
            style="@style/MatchWrap"
            android:gravity="center"
            android:text="10%"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_25"
            android:textStyle="bold" />


        <Button
            android:id="@+id/public_button"
            style="@style/MatchWrap"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="@dimen/icon_width_height_20"
            android:background="@drawable/bg_radius15_blue"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_b"
        style="@style/MatchWrap.Vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_gray1">

        <TextView
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/icon_width_height_10"
            android:gravity="center"
            android:text="@string/Appointment_contract"
            android:textColor="@color/p_white_test" />

        <TextView
            android:id="@+id/tv_cone1"
            style="@style/MatchWrap"
            android:gravity="center"
            android:text="10%"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textColor="@color/p_white_test" />

        <TextView
            android:id="@+id/tv_compile"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/icon_width_height_10"
            android:layout_marginBottom="@dimen/icon_width_height_20"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>