<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch.Vertical"
    tools:context=".Activity.TransferredActivity">

    <include layout="@layout/public_title" />

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_marginTop="@dimen/icon_width_height_20"
        android:background="#FF121E2E">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginStart="@dimen/text_size_14"
            android:layout_marginTop="@dimen/text_size_18"
            android:text="划转币种"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginStart="@dimen/text_size_14">

            <TextView
                android:id="@+id/tv_01"
                style="@style/WrapWrap"
                android:layout_marginTop="1.5dp"
                android:layout_marginBottom="9.5dp"
                android:text="请选择"
                android:textColor="@color/white"

                android:textSize="@dimen/text_size_14" />

            <ImageView style="@style/WrapWrap.ImageView_bank" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_01"
                android:layout_marginEnd="14.5dp"
                android:background="#192754" />
        </RelativeLayout>

        <TextView
            style="@style/WrapWrap"
            android:layout_marginStart="@dimen/text_size_14"
            android:layout_marginTop="@dimen/text_size_18"
            android:text="划转类型"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginStart="@dimen/text_size_14">

            <TextView
                android:id="@+id/tv_02"
                style="@style/WrapWrap"
                android:layout_marginTop="1.5dp"
                android:layout_marginBottom="9.5dp"
                android:text="请选择"
                android:textColor="@color/white"

                android:textSize="@dimen/text_size_14" />

            <ImageView style="@style/WrapWrap.ImageView_bank" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_02"
                android:layout_marginEnd="14.5dp"
                android:background="#192754" />
        </RelativeLayout>

        <TextView
            style="@style/WrapWrap"
            android:layout_marginStart="@dimen/text_size_14"
            android:layout_marginTop="@dimen/text_size_18"
            android:text="划转金额"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11" />

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginStart="@dimen/text_size_14">

            <TextView
                android:id="@+id/tv_03"
                style="@style/WrapWrap"
                android:layout_marginTop="1.5dp"
                android:layout_marginBottom="9.5dp"
                android:text="请选择"
                android:textColor="@color/white"

                android:textSize="@dimen/text_size_14" />

            <ImageView style="@style/WrapWrap.ImageView_bank" />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/public_button"
            style="@style/MatchWrap"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/icon_width_height_20"
            android:layout_marginLeft="@dimen/icon_width_height_20"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="@dimen/icon_width_height_20"
            android:layout_marginBottom="91dp"
            android:background="@drawable/bg_radius5_blue"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
</LinearLayout>