<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WrapWrap"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/pop_layout"
        style="@style/MatchWrap"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@drawable/bg_gray1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/start_or_end_10"
            android:layout_marginEnd="@dimen/icon_width_height_20"
            android:id="@+id/tv_issue"
            style="@style/MatchWrap"
            android:layout_marginStart="@dimen/icon_width_height_20"
            android:layout_marginLeft="@dimen/icon_width_height_20"
            android:background="@color/black_01"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp" />


        <ListView
            android:id="@+id/listv"
            style="@style/MatchWrap"
            android:layout_marginStart="@dimen/icon_width_height_20"
            android:background="@color/black_01"
            android:choiceMode="singleChoice"
            android:divider="@color/black_01"
            android:dividerHeight="@dimen/icon_width_height_10" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/MatchWrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/icon_width_height_30"
            android:layout_marginTop="@dimen/icon_width_height_20"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/icon_width_height_30"
            android:layout_marginBottom="@dimen/icon_width_height_20"
            android:background="@drawable/bg_radius15_blue"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>


</RelativeLayout>