<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_gray1">

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginStart="@dimen/icon_width_height_20"
            android:layout_marginLeft="@dimen/icon_width_height_20"
            android:layout_marginTop="@dimen/icon_width_height_20"
            android:layout_marginEnd="@dimen/icon_width_height_20">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/Enter_security_password"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:text="@string/cancel"
                android:textColor="@color/white" />
        </RelativeLayout>

        <com.example.et.View.ActivationCodeBox
            android:id="@+id/ppet"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/icon_width_height_20" />

        <Button
            android:id="@+id/public_button"
            style="@style/MatchWrap"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/icon_width_height_20"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="@dimen/icon_width_height_20"
            android:background="@drawable/bg_radius5_blue"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />


    </LinearLayout>

</RelativeLayout>